<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="367dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="İSG RİSK TESPİT VE DÖF FORMU"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <LinearLayout

                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"

             >

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tespit Tarihi:" />

                <Button
                    android:id="@+id/btn_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:text="@string/pleace_callendar" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
          >

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Uygunsuzluk Yeri:" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/ed_uygunsuz"
                    android:hint="Yazmak için tıklayınız..."
                    android:textColorHint="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"

               >

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Etkilenen Grup:" />

                <EditText
                    android:textColor="@color/black"
                    android:hint="Yazmak için tıklayınız..."
                    android:textColorHint="@color/gray"
                    android:id="@+id/ed_etkilenen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alınmış Önlem:" />

                <EditText
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:hint="Yazmak için tıklayınız..."
                    android:id="@+id/ed_alınmıs_onlem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                     />
            </LinearLayout>


            <Button
                android:id="@+id/btn_select_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resim seçmek için tıklayınız" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Olasılık"
                 />
            <Spinner
                android:layout_marginTop="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/src_spinner"
                android:outlineAmbientShadowColor="@color/white"
                android:id="@+id/sp_olasilik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:outlineSpotShadowColor="@color/white"

                />


            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Frekans"
               />

            <Spinner
                android:layout_marginTop="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/src_spinner"
                android:id="@+id/sp_frekans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Şiddet"
                />

            <Spinner

                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/src_spinner"
                android:id="@+id/sp_siddet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
            />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tehlike Açıklaması"
                />

            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:id="@+id/ed_aciklama_tehlike"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:ems="10"
                android:scrollbars="vertical"
                android:text=""
                android:hint="Lütfen açıklama giriniz..."
               />

            <TextView
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Risk Açıklaması"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_aciklama_tehlike" />
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:layout_width="match_parent"
                android:id="@+id/ed_aciklama_risk"
                android:hint="Lütfen açıklama giriniz..."
                android:layout_height="120dp"
                android:scrollbars="vertical"></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÜZELTİCİ ÖNLEYİCİ FALİYET"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                ></TextView>

            <CheckBox
                android:layout_marginTop="8dp"
                android:id="@+id/ch_duzeltici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:text="Düzeltici Faaliyet (Meydana gelmiş bir uygunsuzluk için)" />

            <CheckBox
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/ch_onleyici"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Önleyici Faaliyet (Meydana gelebilecek bir uygunsuzluk için)"  />

            <CheckBox
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:id="@+id/ch_giderildi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uygunsuzluk Giderildi" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Alınması Gereken Önlem"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Lütfen açıklama giriniz..."
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:scrollbars="vertical"
                android:id="@+id/ed_alinmasigereken_onlem"
                ></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uygunsuzluğun Giderilmesi İçin Yapılan Çalışmalar"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Lütfen açıklama giriniz..."
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:scrollbars="vertical"
                android:id="@+id/ed_uygunsuzlugun_giderilmesi"
                ></EditText>
            <Button
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/btn_main"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="PDF oluştur"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:background="@drawable/src_btn_main"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>